<Infrastructure:View x:Class="Raven.Studio.Features.Documents.DocumentsView"
					 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
					 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
					 xmlns:Controls="clr-namespace:System.Windows.Controls"
					 xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
					 xmlns:ei="http://schemas.microsoft.com/expression/2010/interactions"
					 xmlns:Infrastructure="clr-namespace:Raven.Studio.Infrastructure"
					 xmlns:toolkit="http://schemas.microsoft.com/winfx/2006/xaml/presentation/toolkit"
					 xmlns:Behaviors="clr-namespace:Raven.Studio.Behaviors">

	<Grid>
		<toolkit:HeaderedContentControl Style="{StaticResource Style_HeaderedContentControl}">
			<toolkit:HeaderedContentControl.Header>
				<toolkit:DockPanel Margin="4"  LastChildFill="False">
					<StackPanel Orientation="Horizontal">
						<Image Source="{StaticResource Image_Document_Tiny}" Stretch="None" VerticalAlignment="Center" Margin="4,0,4,0"/>
						<TextBlock x:Name="HeaderText"
						Style="{StaticResource Style_Text_Header}"
						Text="{Binding ViewTitle}" 
						toolkit:DockPanel.Dock="Left"
						VerticalAlignment="Center"
						 Margin="6,0"/>
					</StackPanel>

					<StackPanel  toolkit:DockPanel.Dock="Right"
								 Orientation="Horizontal"
								 VerticalAlignment="Center">
						<HyperlinkButton Command="{Binding Path=Pager.PrevPage}"
										 Style="{StaticResource Style_Link_MouseOverChrome}"
										 ToolTipService.ToolTip="Previous Page">
							<HyperlinkButton.Content>
								<Image Source="{StaticResource Image_PreviousPage_Tiny}"
									   Stretch="None"
									   VerticalAlignment="Center" />
							</HyperlinkButton.Content>
						</HyperlinkButton>
						<TextBlock Text="Page "
								   VerticalAlignment="Center" />
						<TextBlock Text="{Binding Path=Pager.CurrentPage}"
								   VerticalAlignment="Center" />
						<TextBlock Text=" of "
								   VerticalAlignment="Center" />
						<TextBlock Text="{Binding Path=Pager.TotalPages}"
								   VerticalAlignment="Center" />
						<HyperlinkButton Command="{Binding Path=Pager.NextPage}"
										 Style="{StaticResource Style_Link_MouseOverChrome}"
										 ToolTipService.ToolTip="Next Page">
							<HyperlinkButton.Content>
								<Image Source="{StaticResource Image_NextPage_Tiny}"
									   Stretch="None"
									   VerticalAlignment="Center" />
							</HyperlinkButton.Content>
						</HyperlinkButton>
					</StackPanel>

					<StackPanel toolkit:DockPanel.Dock="Right"
								Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,10,0">
						<HyperlinkButton Command="{StaticResource NavigateToCommand}"
										 CommandParameter="/edit?mode=new">
							<HyperlinkButton.Content>
								<StackPanel Orientation="Horizontal">
									<Image Source="{StaticResource Image_AddDatabase_Tiny}"
										   Stretch="None"
										   VerticalAlignment="Center"
										   Margin="4,0,4,0" />
									<TextBlock Text="Create a Document"
											   VerticalAlignment="Center" />
								</StackPanel>
							</HyperlinkButton.Content>
						</HyperlinkButton>
					</StackPanel>
				</toolkit:DockPanel>
			   
			</toolkit:HeaderedContentControl.Header>

			<ListBox x:Name="DocumentsList"
					 ItemsSource="{Binding Documents}"
					 Style="{StaticResource DocumentList}"
					 SelectionChanged="DocumentsList_SelectionChanged"
					 Grid.Row="1"
					 Grid.ColumnSpan="3"
					 Margin="10">
				
				<Controls:ContextMenuService.ContextMenu>
					<Controls:ContextMenu x:Name="DocumentsContextMenu">
						<Controls:MenuItem Header="Copy Document(s) Id to Clipboard"
										   Command="{Binding Source={StaticResource CopyDocumentsIdsCommand}}"
										   CommandParameter="{Binding RelativeSource={RelativeSource Self}}" />
						<Controls:MenuItem Header="Delete"
										   Command="{Binding Source={StaticResource DeleteDocumentsCommand}}"
										   CommandParameter="{Binding RelativeSource={RelativeSource Self}}" />
					</Controls:ContextMenu>
				</Controls:ContextMenuService.ContextMenu>
				
				<i:Interaction.Triggers>
					<ei:KeyTrigger Key="Delete">
						<i:InvokeCommandAction Command="{StaticResource DeleteDocumentsCommand}"
											   CommandParameter="{Binding RelativeSource={RelativeSource Self}}" />
					</ei:KeyTrigger>
				</i:Interaction.Triggers>

				<ListBox.ItemTemplate>
					<DataTemplate>
						<Grid Width="100"
							  Height="50"
							  Margin="2"
							  ToolTipService.ToolTip="{Binding ToolTipText}">

							<i:Interaction.Behaviors>
								<Behaviors:DoubleClickBehavior Command="{Binding Edit}" />
							</i:Interaction.Behaviors>

							<Rectangle Fill="#FFF4F4F5" />
							<Rectangle HorizontalAlignment="Left"
									   Width="10"
									   x:Name="DocumentGrid"
									   Fill="{Binding Path=Fill}" />

							<Grid Margin="14,0,0,0">
								<StackPanel Orientation="Vertical">
									<TextBlock Text="{Binding CollectionType}"
											   TextTrimming="WordEllipsis"
											   HorizontalAlignment="Left" />
									<TextBlock Text="{Binding DisplayId}"
											   TextTrimming="WordEllipsis"
											   HorizontalAlignment="Left" />
								</StackPanel>
							</Grid>

							<StackPanel x:Name="overlay"
										Orientation="Horizontal"
										HorizontalAlignment="Right"
										VerticalAlignment="Bottom">
								<Button VerticalAlignment="Center"
										Style="{StaticResource Style_Button_MouseOverChrome}"
										Padding="4"
										Command="{Binding Path=Edit}"
										ToolTipService.ToolTip="click here to edit the document">
									<Button.Content>
										<Image Source="{StaticResource Image_Edit_Small}"
											   Stretch="None" />
									</Button.Content>
								</Button>
							</StackPanel>
						</Grid>
					</DataTemplate>
				</ListBox.ItemTemplate>
			</ListBox>
</toolkit:HeaderedContentControl>

	</Grid>
</Infrastructure:View>