<UserControl x:Class="Raven.Studio.Controls.ViewSizeControl"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:b="clr-namespace:Boogaart.Silverlight.Behaviors"
			 mc:Ignorable="d"
			 d:DesignHeight="300"
			 d:DesignWidth="400">

	<Grid x:Name="LayoutRoot"
		  ToolTipService.ToolTip="Change Displayed Document Size">
		<ToggleButton x:Name="ToggleButton"
					  Style="{StaticResource Style_Button_MouseOverChrome}">
			<ToggleButton.Content>
				<StackPanel Orientation="Horizontal">
					<Image Source="{StaticResource Image_ChangeView_Tiny}"
						   Stretch="None"
						   VerticalAlignment="Center" />
					<Path x:Name="BtnArrow"
						  Data="F1 M 301.14,-189.041L 311.57,-189.041L 306.355,-182.942L 301.14,-189.041 Z "
						  VerticalAlignment="Center"
						  Height="4"
						  Margin="4,0"
						  Stretch="Uniform"
						  Width="8">
						<Path.Fill>
							<SolidColorBrush x:Name="BtnArrowColor"
											 Color="#FF333333" />
						</Path.Fill>
					</Path>
				</StackPanel>
			</ToggleButton.Content>
		</ToggleButton>
		<Popup IsOpen="{Binding ElementName=ToggleButton, Path=IsChecked, Mode=TwoWay}"
			   b:Popup.PlacementTarget="{Binding ElementName=ToggleButton}"
			   b:Popup.StaysOpen="False">
			<b:Popup.PreferredOrientations>
				<b:PopupOrientationCollection>
					<b:PopupOrientation Placement="Bottom"
										HorizontalAlignment="Center" />
				</b:PopupOrientationCollection>
			</b:Popup.PreferredOrientations>
			<Border Background="#EFEFEF"
					BorderThickness="1"
					BorderBrush="Gray"
					Margin="0,20,0,0">
				<Border.Effect>
					<DropShadowEffect Opacity="0.4" />
				</Border.Effect>
				<Grid Height="150">
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="Auto" />
						<ColumnDefinition Width="Auto" />
					</Grid.ColumnDefinitions>

					<Slider Orientation="Vertical"
							Minimum="66"
							Maximum="700"
							Value="{Binding ViewSize, Mode=TwoWay}"
							Grid.Column="0"
							Margin="4" />

					<Rectangle Width="1"
							   Fill="#DFDFDF"
							   Grid.Column="0"
							   HorizontalAlignment="Right" />
					<Rectangle Width="1"
							   Fill="#FEFEFE"
							   Grid.Column="1"
							   HorizontalAlignment="Left" />

					<TextBlock Text="Compact"
							   HorizontalAlignment="Left"
							   VerticalAlignment="Bottom"
							   Margin="5,0,5,3"
							   Grid.Column="1" />
					<TextBlock Text="Expanded"
							   HorizontalAlignment="Left"
							   VerticalAlignment="Top"
							   Margin="5,3,5,0"
							   Grid.Column="1" />
				</Grid>

			</Border>
		</Popup>
	</Grid>
</UserControl>