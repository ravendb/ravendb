@font-face {
    font-family: "{{fontName}}";
    font-display: block;
    src: {{{src}}};
}

{{baseSelector}} {
    line-height: 1;
}

{{baseSelector}}:before {
    font-family: {{fontName}} !important;
    font-style: normal;
    font-weight: normal !important;
    vertical-align: top;
}

{{#each codepoints}}
.{{../classPrefix}}{{@key}}:before {
    content: "\\{{this}}";
}
.{{../classPrefix}}addon-{{@key}}:after {
    content: "\\{{this}}";
}
{{/each}}
