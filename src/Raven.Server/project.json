{
  "version": "4.0.0-*",
  "description": "Raven.Server is the database server for RavenDB",
  "authors": [ "Hibernating Rhinos" ],

  "packOptions": {
    "tags": [ "database", "nosql", "doc db" ],
    "projectUrl": "https://ravendb.net"
  },

  "buildOptions": {
    "allowUnsafe": true,
    "emitEntryPoint": true,
    "define": [ "PORTABLE" ],
    "compile": {
      "include": [ "**/*.cs", "../CommonAssemblyInfo.cs", "../../Imports/metrics.net/Src/Metrics/**/*.cs" ]
    },
    "embed": {
      "include": [ "Documents/Patch/*.js" ]
    }
  },

  "configurations": {
    "Release": {
      "buildOptions": {
        "optimize": true
      }
    }
  },

  "dependencies": {
    "Jint": "2.8.1",
    "Lucene.Net": "3.0.4-*",
    "Lucene.Net.Contrib.Spatial.NTS": "3.0.4-*",
    "Raven.Client": "4.0.0-*",
    "Sparrow": "4.0.0-*",
    "Voron": "4.0.0-*"
  },

  "commands": {
    "Raven.Server": "Raven.Server"
  },

  "frameworks": {
    "netcoreapp1.0": {
      "buildOptions": { "define": [ ] },
      "dependencies": {
        "Microsoft.AspNetCore.Server.Kestrel": "1.0.0-rc2-*",
        "Microsoft.CSharp": "4.0.1-rc2-*",
        "Microsoft.Extensions.Configuration.Json": "1.0.0-rc2-*",
        "Microsoft.Extensions.Configuration.CommandLine": "1.0.0-rc2-*",
        "Microsoft.Extensions.Configuration.EnvironmentVariables": "1.0.0-rc2-*",
        "NETStandard.Library": "1.5.0-rc2-*",
        "System.ComponentModel": "4.0.1-rc2-*",
        "System.Data.SqlClient": "4.1.0-rc2-*",
        "System.Threading.Tasks.Parallel": "4.0.1-rc2-*",
        "Microsoft.CodeAnalysis.CSharp": "1.3.0-beta1-*",
        "System.Runtime.Loader": "4.0.0-rc2-*",

        "Microsoft.NETCore.App": {
          "type": "platform",
          "version": "1.0.0-rc2-*"
        }
      },
      "imports": [
        "dnxcore50"
      ]
    }
  },
  "userSecretsId": "aspnet5-Raven.Server-20160308043041"
}
