{
  "version": "4.0.0-*",
  "description": "Raven.Server is the database server for RavenDB",
  "authors": [ "Hibernating Rhinos" ],

  "packOptions": {
    "tags": [ "database", "nosql", "doc db" ],
    "projectUrl": "https://ravendb.net"
  },

  "buildOptions": {
    "allowUnsafe": true,
    "emitEntryPoint": true,
    "warningsAsErrors": true,
    "define": [ "PORTABLE" ],
    "compile": {
      "include": [ "**/*.cs", "../CommonAssemblyInfo.cs", "../../Imports/metrics.net/Src/Metrics/**/*.cs" ]
    },
    "embed": {
      "include": [
        "Documents/Patch/*.js",
        "Web/Studio/EmbeddedData/*.ravendbdump",
        "Web/Studio/EmbeddedData/*.cs"
      ]
    }
  },

  "configurations": {
    "Release": {
      "buildOptions": {
        "optimize": true
      }
    }
  },

  "dependencies": {
    "AsyncFriendlyStackTrace": "1.4.1",
    "Jint": "2.8.1",
    "Lucene.Net": "3.0.4-*",
    "Lucene.Net.Contrib.Spatial.NTS": "3.0.4-*",
    "Microsoft.AspNetCore.Server.Kestrel": "1.0.1",
    "Microsoft.CodeAnalysis.CSharp": "1.3.2",
    "Microsoft.CSharp": "4.0.1",
    "Microsoft.Extensions.Configuration.CommandLine": "1.0.0",
    "Microsoft.Extensions.Configuration.EnvironmentVariables": "1.0.0",
    "Microsoft.Extensions.Configuration.Json": "1.0.0",
    "Microsoft.NETCore.App": "1.0.1",
    "Raven.Client": "4.0.0-*",
    "Sparrow": "4.0.0-*",
    "System.ComponentModel": "4.0.1",
    "System.Data.SqlClient": "4.1.0",
    "System.Reflection.Emit.Lightweight": "4.0.1",
    "System.Runtime.Loader": "4.0.0",
    "System.Threading.Tasks.Parallel": "4.0.1",
    "Voron": "4.0.0-*"
  },

  "commands": {
    "Raven.Server": "Raven.Server"
  },

  "frameworks": {
    "netcoreapp1.0": {
      "dependencies": {
      },
      "imports": "dnxcore50"
    }    
  },

  "runtimes": {
    "win7-x64": {},
    "win8-x64": {},
    "win10-x64": {},
    "ubuntu.14.04-x64": {} 
  },

  "userSecretsId": "aspnet5-Raven.Server-20160308043041"
}
